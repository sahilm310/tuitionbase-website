---
import Schema from "./head/Schema.astro";
import Favicons from "./head/Favicons.astro";
import SeoMeta from "./head/SeoMeta.astro";
import Analytics from "./head/Analytics.astro";

const BASE_URL = import.meta.env.BASE_URL;
const fontNames = ["Mont-Heavy", "Gontserrat-Regular", "Gontserrat-SemiBold", "Gontserrat-Bold"];
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<Analytics />

<title>TuitionBase | Expert Tuition in Maths, English, Science & 11+</title>

<SeoMeta />
<Favicons />

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />

{
    fontNames.map((font) => {
        return (
            <link
                rel="preload"
                href={`${BASE_URL}content/fonts/${font}.woff2`}
                as="font"
                type="font/woff2"
                crossorigin
            />
        );
    })
}

<Schema />

<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://cdnjs.cloudflare.com" />
<link rel="preconnect" href="https://www.googletagmanager.com" />
<link rel="preconnect" href="https://www.google-analytics.com" />
