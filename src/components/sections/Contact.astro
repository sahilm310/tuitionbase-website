---
import { email, phoneNumber, phoneNumberLink } from "../../config/constants";

// Props can be added here if needed in the future
---

<section class="contact-section" id="contact">
    <div class="container">
        <div class="section-header">
            <h2>Contact Us</h2>
            <p>
                Get in touch to start your child's educational journey with
                TuitionBase
            </p>
        </div>
        <div class="contact-content">
            <div class="contact-info-main">
                <p class="contact-intro">
                    If you would like to enrol for any of the subjects we offer
                    or have any questions please contact us on:
                </p>
                <div class="contact-details">
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-phone"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Phone</h3>
                            <a
                                href={`tel:${phoneNumberLink}`}
                                class="contact-link">{phoneNumber}</a
                            >
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon whatsapp-icon">
                            <i class="fab fa-whatsapp"></i>
                        </div>
                        <div class="contact-text">
                            <h3>WhatsApp</h3>
                            <p>
                                Quick and easy way to get in touch with us
                                instantly.
                            </p>
                            <a
                                target="_blank"
                                href="https://wa.me/447932391843?text=I'm%20enquiring%20about%20tuition"
                                class="whatsapp-btn-contact"
                            >
                                Click Here
                            </a>
                        </div>
                    </div>
                    <div class="contact-item">
                        <div class="contact-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-text">
                            <h3>Email</h3>
                            <p>
                                Email us with details of the nature of your
                                enquiry and we will get back to you.
                            </p>
                            <a
                                href="mailto:info@tuitionbase.co.uk"
                                class="contact-link">{email}</a
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style lang="scss">
    /* Contact Section */
    .contact-section {
        background: white;
    }

    .contact-content {
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    .contact-intro {
        font-size: 20px;
        color: #333;
        margin-bottom: 48px;
        line-height: 1.6;
    }

    .contact-details {
        display: flex;
        justify-content: center;
        gap: 32px;
        margin-top: 32px;
        flex-wrap: wrap;
    }

    .contact-item {
        background: #f8f9fa;
        padding: 32px;
        border-radius: 15px;
        text-align: center;
        transition:
            transform 0.3s,
            box-shadow 0.3s;
        flex: 1;
        min-width: 250px;
        max-width: 300px;
    }

    .contact-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    .contact-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #0bb2f0, #00acec);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 22px;
        color: white;
        font-size: 32px;
    }

    .whatsapp-icon {
        background: linear-gradient(135deg, #25d366, #128c7e);
    }

    .contact-item h3 {
        color: #055776;
        margin-bottom: 16px;
        font-size: 22px;
    }

    .contact-item p {
        color: #666;
        line-height: 1.6;
        margin-bottom: 16px;
    }

    .contact-link {
        color: #0bb2f0;
        text-decoration: none;
        font-weight: bold;
        font-size: 20px;
        transition: color 0.3s;
    }

    .contact-link:hover {
        color: #055776;
    }

    .whatsapp-btn-contact {
        background: #25d366;
        color: white;
        padding: 12px 32px;
        border-radius: 25px;
        text-decoration: none;
        font-weight: bold;
        display: inline-block;
        transition:
            background 0.3s,
            transform 0.3s;
    }

    .whatsapp-btn-contact:hover {
        background: #128c7e;
        transform: translateY(-2px);
        color: white;
    }
</style>
