---
const branches = [
    {
        mapUrl: "https://maps.app.goo.gl/MWmWY6Z21fPyphqq6",
        name: "TuitionBase Enfield",
        address: ["Oasis Academy Hadley", "South Street, Enfield EN3 4PX"],
        ofstedNumber: "EY545755",
    },
    {
        mapUrl: "https://maps.app.goo.gl/TdmKreorm52gdsHk9",
        name: "TuitionBase Edmonton",
        address: ["The Latymer School", "Haselbury Road, London N9 9TN"],
        ofstedNumber: "EY552284",
    },
    {
        mapUrl: "https://maps.app.goo.gl/5hwQARsPHZBq4mUQ9",
        name: "TuitionBase Forest Gate",
        address: ["Forest Gate Community School", "Forest Lane, London E7 9BB"],
        ofstedNumber: "EY553940",
    },
];
---

<section class="branches" id="branches">
    <div class="container">
        <div class="section-header">
            <h2>Our Locations</h2>
            <p>Find a TuitionBase centre near you</p>
        </div>
        <div class="branches-grid">
            {
                branches.map((branch) => {
                    return (
                        <a
                            class="branch-card"
                            href={branch.mapUrl}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <div class="branch-header">
                                <i class="fas fa-map-marker-alt branch-pin" />
                                <h3>{branch.name}</h3>
                            </div>
                            <div class="branch-info">
                                {branch.address.map((addressLine) => (
                                    <p>{addressLine}</p>
                                ))}
                                <div class="ofsted-info">
                                    <p>
                                        OFSTED Registration:{" "}
                                        {branch.ofstedNumber}
                                    </p>
                                </div>
                            </div>
                        </a>
                    );
                })
            }
        </div>
    </div>
</section>
<style lang="scss">
    /* Branches Section */
    .branches {
        background: #f8f9fa;
    }

    .branches-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 32px;
        margin-top: 48px;
    }

    .branch-card {
        text-decoration: none;
        background: linear-gradient(135deg, #0bb2f0, #00acec);
        color: white;
        padding: 32px;
        border-radius: 15px;
        text-align: center;
        transition: transform 0.3s;
    }

    .branch-card:hover {
        transform: translateY(-5px);
    }

    .branch-header {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        margin-bottom: 16px;
    }

    .branch-pin {
        font-size: 24px;
        color: rgba(255, 255, 255, 0.9);
    }

    .branch-card h3 {
        margin-bottom: 16px;
        font-size: 22px;
        margin: 0;
    }

    .branch-info p {
        margin-bottom: 8px;
        opacity: 0.9;
    }

    .ofsted-info {
        margin-top: 16px;
        padding-top: 16px;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        font-size: 14px;
    }

    @media (max-width: 768px) {
        .branches-grid {
            grid-template-columns: 1fr;
        }
    }
</style>
